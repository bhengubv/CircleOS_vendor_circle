<?xml version="1.0" encoding="utf-8"?>
<!--
  Circle OS Design System — Comfortaa font family
  Source: Google Fonts — Comfortaa (OFL licence)
  File: comfortaa_variable.ttf (variable font, wght axis 300–700)
  Prebuilt TTFs in: vendor/circle/prebuilt/fonts/

  Uses fontVariationSettings to select weight from the variable font.
  Requires API 26+ (Android O) — all CircleOS targets qualify.
-->
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:fontVariationSettings="'wght' 400"
        android:font="@font/comfortaa_variable" />
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:fontVariationSettings="'wght' 500"
        android:font="@font/comfortaa_variable" />
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:fontVariationSettings="'wght' 700"
        android:font="@font/comfortaa_variable" />
</font-family>
