<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.circleos.sdpkt">

    <!-- NFC -->
    <uses-permission android:name="android.permission.NFC" />
    <!-- HCE service binding -->
    <uses-permission android:name="android.permission.BIND_NFC_HCE_SERVICE" />
    <!-- Boot-complete receiver to refresh wallet state -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Privileged: access SDPKT system service -->
    <uses-permission android:name="com.circleos.permission.ACCESS_SDPKT" />

    <!-- NFC HCE is required -->
    <uses-feature android:name="android.hardware.nfc.hce" android:required="true" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:label="@string/app_name"
        android:persistent="false"
        android:defaultToDeviceProtectedStorage="true"
        android:directBootAware="true">

        <!-- Main wallet UI -->
        <activity
            android:name=".app.WalletActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Material.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HCE service — receiver side NFC -->
        <service
            android:name=".app.SdpktHceService"
            android:exported="true"
            android:permission="android.permission.BIND_NFC_HCE_SERVICE">
            <intent-filter>
                <action android:name="android.nfc.cardemulation.action.HOST_APDU_SERVICE" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.cardemulation.host_apdu_service"
                android:resource="@xml/hce_service" />
        </service>

        <!-- Quick Pay QS tile (Phase 4) -->
        <service
            android:name=".app.QuickPayTileService"
            android:exported="true"
            android:label="@string/tile_quick_pay"
            android:icon="@android:drawable/ic_lock_lock"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>
</manifest>
