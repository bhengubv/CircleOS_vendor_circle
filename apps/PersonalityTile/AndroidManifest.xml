<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.circleos.personalitytile">

    <uses-permission android:name="com.circleos.permission.ACCESS_PERSONALITY" />
    <uses-permission android:name="android.permission.BIND_QUICK_SETTINGS_TILE" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_personality"
        android:theme="@android:style/Theme.DeviceDefault">

        <service
            android:name=".PersonalityTileService"
            android:label="@string/tile_label"
            android:icon="@drawable/ic_personality"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <activity
            android:name=".ModeChooserActivity"
            android:label="@string/chooser_title"
            android:theme="@android:style/Theme.DeviceDefault.Dialog"
            android:exported="false" />

    </application>
</manifest>
