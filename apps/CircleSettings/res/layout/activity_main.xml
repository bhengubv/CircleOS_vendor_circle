<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ── OTA Update Status ────────────────────────────── -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_updates"
            android:textColor="#FF80CFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:paddingBottom="4dp"
            android:paddingTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FF1E1E1E"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_update_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_update_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFB0B0B0"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btn_check_now"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="@string/btn_check_updates"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_apply_update"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="@string/btn_apply_update"
                    android:textSize="13sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- ── Channel Selection ────────────────────────────── -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_channel"
            android:textColor="#FF80CFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:paddingBottom="4dp"
            android:paddingTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FF1E1E1E"
            android:layout_marginBottom="8dp">

            <RadioGroup
                android:id="@+id/rg_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_stable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_stable"
                    android:textColor="#FFFFFFFF"
                    android:buttonTint="#FF4FC3F7" />

                <RadioButton
                    android:id="@+id/rb_beta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_beta"
                    android:textColor="#FFFFFFFF"
                    android:buttonTint="#FF4FC3F7" />

                <RadioButton
                    android:id="@+id/rb_nightly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_nightly"
                    android:textColor="#FFFFFFFF"
                    android:buttonTint="#FF4FC3F7" />

            </RadioGroup>

        </LinearLayout>

        <!-- ── Privacy Summary ──────────────────────────────── -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_privacy"
            android:textColor="#FF80CFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:paddingBottom="4dp"
            android:paddingTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FF1E1E1E"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_privacy_denied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_privacy_faked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFB0B0B0"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_privacy_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFB0B0B0"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- ── Auto-Revoke ───────────────────────────────────── -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_autorevoke"
            android:textColor="#FF80CFFF"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:paddingBottom="4dp"
            android:paddingTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FF1E1E1E"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_run_now"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/btn_run_now"
                android:textSize="13sp"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <!-- ── Rollback — shown only on slot B ─────────────────────────── -->
        <LinearLayout
            android:id="@+id/section_rollback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/section_rollback"
                android:textColor="#FF80CFFF"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:paddingBottom="4dp"
                android:paddingTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FF1E1E1E"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rollback_message"
                    android:textColor="#FFB0B0B0"
                    android:textSize="13sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_revert_os"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="@string/btn_revert_os"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
